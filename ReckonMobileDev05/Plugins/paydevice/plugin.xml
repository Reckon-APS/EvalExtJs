<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:rim="http://www.blackberry.com/ns/widgets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="org.apache.cordova.paydevice"
    version="0.1.2">
    <name>PayDevice</name>
    <description>Cordova PayDevice Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,paydevice</keywords>

	<engines>
		<engine name="cordova" version=">=3.0.0" />
	</engines>

    <js-module src="www/paydevice.js" name="PayDevice">
    	<clobbers target="cordova.PayDevice" />
    </js-module>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="PayDevice">
                <param name="ios-package" value="PayDevice" />
				<param name="onload" value="true" />
            </feature>
        </config-file>
        
        <source-file framework="true" src="src/ios/libCloudEftposSDK.a" compiler-flags="-all_load -lstdc++"/>
		<header-file src="src/ios/CloudEftposSDK.h" />
-       <source-file src="src/ios/PayDevice.m" />
		<resource-file src="src/ios/CloudEftposSDKResources.bundle" />

		<framework src="CoreBluetooth.framework"/>    
		<framework src="Foundation.framework"/>
        <framework src="UIKit.framework"/>
        <framework src="CoreText.framework"/>
        <framework src="CoreGraphics.framework"/>
		<framework src="MessageUI.framework"/>
		<framework src="libz.dylib"/>
    </platform>
	
	<!-- android -->
	<platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="PayDevice">
                <param name="android-package" value="com.Reckon.PayDevice" onload="true" />
            </feature>
        </config-file>

        <source-file src="src/android/CloudEftposSDK-1.0.4.aar" target-dir="libs" />
    </platform>
</plugin>



